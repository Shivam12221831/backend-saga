<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mini Whatsapp</title>
    <link rel="stylesheet" href="style.css">
</head>
<body>
    <h3>All Chats!</h3>
    <form action="chats/new" method="get">
        <button style="background-color:yellowgreen; border-radius: 5px;">New Chat</button>
    </form>
    <br>
    <% for(let chat of chats){ %>
        <div class="chat">
            <p>From : <i><b><%= chat.from %></b></i></p>
            <div class="msg">
                <p><%= chat.msg %></p>
                <div style="display: flex; justify-content: flex-start;">
                    <form action="/chats/<%= chat._id %>/edit" method="get">
                        <button style="margin-right: 10px; background-color:limegreen;">Edit</button>
                    </form>
                    <form action="/chats/<%= chat._id %>?_method=DELETE" method="post">
                        <button style="background-color: orangered; margin-right: 10px;">Delete</button>
                    </form>
                    <form action="/chats/<%= chat._id %>" method="get">
                        <button>Show</button>
                    </form>
                </div>
            </div>
            <p>Received by <i><b><%= chat.to %></b></i></p>
            <hr>
            <p><%= chat.created_at.toString().split(" ")[4] %></p>
            <p><%= chat.created_at.toString().split(" ").slice(0,4).join(" ") %></p>
        </div>
    <% } %>
</body>
</html>