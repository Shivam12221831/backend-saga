<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Show all users</title>
    <style>
        table, th, td{
            border: 1px, solid, black;
        }
    </style>
</head>
<body>
    <table>
        <tr>
            <th>Id</th>
            <th>Email</th>
            <th>Username</th>
            <th>Edit username</th>
            <th>Delete user</th>
        </tr>
        <% for(user of users){ %>
            <tr>
                <td><%= user.id %></td>
                <td><%= user.email %></td>
                <td><%= user.name %></td>
                <td>
                    <form action="/user/<%= user.id %>/edit" method="get">
                        <button style="background-color: yellowgreen;">Edit username</button>
                    </form>
                </td>
                <td>
                    <form action="/user/<%= user.id %>?_method=DELETE" method="post">
                        <button style="background-color: lightcoral;">Delete User</button>
                    </form>
                </td>
            </tr>
        <% } %>
    </table>
    <br>
    <form action="/user/add" method="get" style="text-align: center;">
        <button style="background-color: crimson; color: aliceblue; height: 30px; margin-bottom: 50px;">Add New User</button>
    </form>
</body>
</html>
